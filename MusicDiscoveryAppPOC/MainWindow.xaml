<Window x:Class="MusicDiscoveryAppPOC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Music Discovery POC"
        Width="1000"
        Height="650"
        MinHeight="600"
        MinWidth="900">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox x:Name="SearchTextBox"
                     Width="400"
                     VerticalAlignment="Center"
                     Margin="0,0,8,0"
                     ToolTip="Enter an artist name and press Search" />
            <Button Content="Search"
                    Width="100"
                    Margin="0,0,8,0"
                    Click="OnSearchClicked" />
            <Button Content="Clear"
                    Width="100"
                    Click="OnClearClicked" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,16,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Spotify Search Results" Margin="0,0,16,0">
                <Grid>
                    <ListView x:Name="SearchResultsList"
                              SelectionMode="Extended"
                              MouseDoubleClick="OnSearchResultDoubleClicked">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <Image Source="{Binding ImageUrl}"
                                           Width="48"
                                           Height="48"
                                           Margin="0,0,8,0" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold" />
                                        <TextBlock Text="{Binding Metadata[genres]}"
                                                   FontStyle="Italic"
                                                   Foreground="Gray"
                                                   TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{Binding Metadata[followers], StringFormat='Followers: {0}'}"
                                                   Foreground="DimGray" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </GroupBox>

            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Add →"
                        Width="120"
                        Margin="0,0,0,12"
                        Click="OnAddArtistClicked" />
                <Button Content="← Remove"
                        Width="120"
                        Click="OnRemoveArtistClicked" />
            </StackPanel>

            <GroupBox Grid.Column="2" Header="Selected Artists">
                <Grid>
                    <ListView x:Name="SelectedArtistsList"
                              SelectionMode="Extended">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" >
                                    <Image Source="{Binding ImageUrl}"
                                           Width="48"
                                           Height="48"
                                           Margin="0,0,8,0" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold" />
                                        <TextBlock Text="{Binding Metadata[genres]}"
                                                   FontStyle="Italic"
                                                   Foreground="Gray"
                                                   TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="StatusTextBlock"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"
                       Foreground="Gray" />
            <ProgressBar x:Name="BusyIndicator"
                         Width="200"
                         Height="4"
                         VerticalAlignment="Center"
                         IsIndeterminate="False"
                         Visibility="Collapsed"
                         Margin="0,0,12,0" />
            <Button x:Name="FindSuggestionsButton"
                    Content="Find Suggested Tracks"
                    Width="200"
                    Click="OnFindSuggestionsClicked" />
        </StackPanel>
    </Grid>
</Window>
